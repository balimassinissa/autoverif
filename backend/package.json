    "devDependencies": {
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.5.2",
        "eslint": "^9.36.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "jest": "^30.1.3",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.4",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.9.2"
    },
    "engines": {
        "node": ">=18 <19"
